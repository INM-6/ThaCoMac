{
    "title": "Article ID",
    "type": "object",
    "properties": {
        "Article_Info": {
            "type": "object",
            "title": "Article Information",
            "properties":{
                "DH_INDEX": {
                    "type": "integer",
                    "title": "DH_INDEX:",
                    "minimum": 0,
                    "maximum": 10979
                },
                "DOI": {
                    "type": "string",
                    "title": "DOI:",
                    "default": "NA",
                    "minLength": 1
                },
                "PMID": {
                    "type": "string",
                    "title": "PMID:",
                    "pattern": "[0-9]{8}|NA",
                    "default": "NA",
                    "minLength": 1
                },
                "PMCID": {
                    "type": "string",
                    "title": "PMCID:",
                    "pattern": "PMC[0-9]{7}|NA",
                    "default": "NA",
                    "minLength": 1
                },
                "Title": {
                    "type": "string",
                    "title": "Article Title:",
                    "default": "NA",
                    "minLength": 1
                },
                "URL": {
                    "type": "string",
                    "title": "URL:",
                    "default": "NA",
                    "minLength": 1
                },
                "Full_Text_URL": {
                    "type": "string",
                    "title": "Full Text URL:",
                    "default": "NA",
                    "minLength": 1                    
                },
                "Publication_Year": {
                    "type": "integer",
                    "title": "Publication Year:",
                    "minimum": 1936,
                    "maximum": 2023,
                    "default": -1
                },
                "First_Autor": {
                    "type": "string",
                    "title": "First Autor:",
                    "default": "NA",
                    "minLength": 1                
                },
                "Macaque_Species": {
                    "type": "array",
                    "title": "Macaque Species used:",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "enum": [
                            "Macaque (not specified)", 
                            "Macaque mulatta", 
                            "macaque 1", 
                            "macaque 2"
                        ]
                    }
                },
                "Comment_on_Article_Info": {
                    "type": "string",
                    "title": "Comment on Article Information:"
                }
            },
            "required": ["DH_INDEX", "DOI", "PMID", "PMCID", "Title", "URL", "Full_Text_URL", "Publication_Year", "First_Autor", "Macaque_Species", "Comment_on_Article_Info"]
        },
        "Atlas_Parcellation_Scheme_and_Nomenclature": {
            "type": "object",
            "title": "Atlas, Parcellation Scheme and Nomenclature",
            "properties":{
                "Atlas": {
                    "type": "string",
                    "title": "Atlas:",
                    "enum": [
                        "NA", 
                        "Atlas name 1", 
                        "Atlas name 2"
                    ],
                    "default": "NA"
                },
                "Cortex_Pacellation_Scheme": {
                    "type": "string",
                    "title": "Cortical Pacellation Scheme:",
                    "enum": [
                        "NA", 
                        "Cortex_Pacellation_Scheme name 1", 
                        "Cortex_Pacellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "Thalamus_Parcellation_Scheme": {
                    "type": "string",
                    "title": "Thalamic Parcellation Scheme:",
                    "enum": [
                        "NA", 
                        "Thalamus_Parcellation_Scheme name 1", 
                        "Thalamus_Parcellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "Nomenclature": {
                    "type": "string",
                    "title": "Nomenclature:",
                    "enum": [
                        "NA",
                        "Nomenclature name 1",
                        "Nomenclature name 2"
                    ],
                    "default": "NA"
                }
            }
        },
        "Injection_and_Labeling": {
            "type": "array",
            "title": "Injection_and_Labeling",
            "items": {
                "type": "object",
                "title": "Injection",
                "properties": {
                    "Injection_Info": {
                        "type": "object",
                        "title": "Injection Information:",
                        "properties": {
                            "Injection_ID": {
                                "type": "string",
                                "title": "Injection ID:",
                                "minLength": 1
                            },
                            "TT_Substance": {
                                "type": "string",
                                "title": "Tracer Substance:",
                                "enum": ["Click to select", "HRP", "WGA", "AVV"],
                                "default": "Click to select"
                            },
                            "TT_Direction": {
                                "type": "string",
                                "title": "Tracing Direction:",
                                "enum": ["Click to select", "anterograde", "retrograde"],
                                "default": "Click to select"
                            },
                            "Injection_Site_Name_by_Author": {
                                "type": "string",
                                "title": "Injection Site Name by Author:",
                                "minLength": 1
                            },
                            "Injection_Site_ID_by_D99": {
                                "type": "string",
                                "title": "Injection Site ID by D99:",
                                "enum": ["Click to select", "Area name 1", "Area name 2"],
                                "default": "Click to select"
                            },
                            "Injection_Coverage": {
                                "type": "object",
                                "title": "Injection Coverage:",
                                "properties": {
                                    "Cover_Entire_Region": {
                                        "type": "string",
                                        "title": "Injection covered the entire region?",
                                        "enum": ["Click to select", "NA", "Y", "N"],
                                        "default": "Click to select"
                                    },
                                    "Cover_Adjacent_Regions": {
                                        "type": "string",
                                        "title": "Injection covered adjacent regions?",
                                        "enum": ["Click to select", "NA", "Y", "N"],
                                        "default": "Click to select"
                                    },
                                    "Extend_into_White_Matter": {
                                        "type": "string",
                                        "title": "Injection extended into white matter?",
                                        "enum": ["Click to select", "NA", "Y", "N"],
                                        "default": "Click to select"
                                    }
                                }
                            },
                            "Injection_Mapping_Confidence": {
                                "type": "string",
                                "title": "Mapping confidence of the injection site:",
                                "enum": ["Click to select", "High", "Medium", "Low"],
                                "default": "Click to select"
                            },
                            "Comment_on_Injection": {
                                "type": "string",
                                "title": "Comment on Injection" 
                            }
                        }
                    },
                    "Labeled_Sites": {
                        "type": "array",
                        "title": "List of Labeled Sites:",
                        "items": {
                            "type": "object",
                            "title": "Labeled Site",
                            "properties": {
                                "Labeled_Site_Name_by_Author": {
                                    "type": "string",
                                    "title": "Labeled Site Name by Author:",
                                    "minLength": 1
                                },
                                "Labeled_Area_ID_by_D99": {
                                    "type": "string",
                                    "title": "Labeled Area ID by D99:",
                                    "enum": ["Click to select", "Area ID 1", "Area ID 2", "Area ID 3"],
                                    "default": "Click to select"
                                },
                                "Coverage_of_Labeled_Site": {
                                    "type": "string",
                                    "title": "Coverage of Labeled Site:",
                                    "enum": ["Click to select", "NA", "All over the specified region", "Concentrated in a unnamed subarea"],
                                    "default": "Click to select"
                                },
                                "Qualitative_Strength_of_Labelling": {
                                    "type": "string",
                                    "title": "Strength of Labelling in Qualitative Terms:",
                                    "enum": ["Click to select", "NA", "Strong", "Medium", "Weak"],
                                    "default": "Click to select"
                                },
                                "FLN": {
                                    "type": "float",
                                    "title": "Fraction of Labeled Neurons (FLN):",
                                    "minimum": 0.0,
                                    "maximum": 1.0,
                                    "default": null
                                },
                                "Labeled_Site_Mapping_Confidence": {
                                    "type": "string",
                                    "title": "Mapping confidence of the labeled site:",
                                    "enum": ["Click to select", "High", "Medium", "Low"],
                                    "default": "Click to select"
                                },
                                "Comment_on_Labeled_Site": {
                                    "type": "string",
                                    "title": "Comment on Labeled Site:"
                                }
                            }
                        }
                    }
                },
                "required": ["Injection_Info", "Labeled_Sites"]
            }
        },
        "Form_of_Data_Provided": {
            "type": "string",
            "title": "Data provided as text, figures or both?",
            "enum": [
                "Click to select", "NA", "Only Text", "Only Figures", "Text and Figures"
            ],
            "default": "Click to select"
        },
        "Comment_on_Article": {
            "type": "string",
            "title": "Comments on This Article:"
        }
    },
    "required": [
        "Article_Info", 
        "Atlas_Parcellation_Scheme_and_Nomenclature", 
        "Injection_and_Labeling", 
        "Form_of_Data_Provided",
        "Comment_on_Article"
    ]
}