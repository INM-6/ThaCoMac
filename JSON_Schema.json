{
    "title": "Article ID",
    "type": "object",
    "properties": {
        "Article_Info": {
            "type": "object",
            "title": "Article Information",
            "properties":{
                "DH_INDEX": {
                    "type": "integer",
                    "title": "DH_INDEX:",
                    "minimum": 0,
                    "maximum": 10979,
                    "default": -1
                },
                "DOI": {
                    "type": "string",
                    "title": "DOI:",
                    "default": "NA",
                    "minLength": 1
                },
                "PMID": {
                    "type": "string",
                    "title": "PMID:",
                    "pattern": "[0-9]{8}|NA",
                    "default": "NA",
                    "minLength": 1
                },
                "PMCID": {
                    "type": "string",
                    "title": "PMCID:",
                    "pattern": "PMC[0-9]{7}|NA",
                    "default": "NA",
                    "minLength": 1
                },
                "Title": {
                    "type": "string",
                    "title": "Article Title:",
                    "default": "NA",
                    "minLength": 1
                },
                "URL": {
                    "type": "string",
                    "title": "URL:",
                    "default": "NA",
                    "minLength": 1
                },
                "Publication_Year": {
                    "type": "integer",
                    "title": "Publication Year:",
                    "minimum": 1936,
                    "maximum": 2023,
                    "default": -1
                },
                "First_Autor": {
                    "type": "string",
                    "title": "First Autor:",
                    "default": "NA",
                    "minLength": 1                
                },
                "Comment_on_Article_Info": {
                    "type": "string",
                    "title": "Comment on Article Information:"
                }
            },
            "required": [
                "DH_INDEX", 
                "DOI", 
                "PMID", 
                "PMCID", 
                "Title", 
                "URL", 
                "Publication_Year", 
                "First_Autor", 
                "Comment_on_Article_Info"
            ]
        },
        "Parcellation_Scheme": {
            "type": "object",
            "title": "Parcellation Scheme",
            "properties":{
                "Cortex_Pacellation_Scheme": {
                    "type": "string",
                    "title": "Cortical Pacellation Scheme:",
                    "enum": [
                        "NA", 
                        "Cortex_Pacellation_Scheme name 1", 
                        "Cortex_Pacellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "Thalamus_Parcellation_Scheme": {
                    "type": "string",
                    "title": "Thalamic Parcellation Scheme:",
                    "enum": [
                        "NA", 
                        "Thalamus_Parcellation_Scheme name 1", 
                        "Thalamus_Parcellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "PS_for_Certain_Brainsites": {
                    "type": "array",
                    "title": "Parcellation Scheme for Certain Brainsites",
                    "items": {
                        "type": "object",
                        "title": "Case",
                        "properties": {
                            "Brainsite": {
                                "type": "string",
                                "title": "Brainsite:",
                                "enum": [
                                    "Click to select",
                                    "Brainsite name 1", 
                                    "Brainsite name 2"
                                ],
                                "default": "Click to select"
                            },
                            "Parcellation_Scheme": {
                                "type": "string",
                                "title": "Parcellation Scheme:",
                                "enum": [
                                    "Click to select", 
                                    "Parcellation_Schem name 1", 
                                    "Parcellation_Schem name 2"
                                ],
                                "default": "Click to select"
                            },
                            "Comment": {
                                "type": "string",
                                "title": "Comment:"
                            }
                        },
                        "required": ["Brainsite", "Parcellation_Scheme", "Comment"]
                    }
                }
            },
            "required": [
                "Cortex_Pacellation_Scheme", 
                "Thalamus_Parcellation_Scheme"
            ]
        },
        "TT_Experiments": {
            "type": "array",
            "title": "Tract-Tracing Experiments",
            "items": {
                "type": "object",
                "title": "Subject Experiment",
                "properties": {
                    "Subject_Subspecies": {
                        "type": "string",
                        "title": "Subspecies of The Subject:",
                        "enum": [
                            "Macaque (not specified)",
                            "Rhesus macaque (Macaca mulatta)",
                            "Japanese macaque (Macaca fuscata)",
                            "Pig-tailed macaque (Macaca nemestrina)",
                            "Crab-eating macaque / Cynolomogus macaque (Macaca fascicularis)"
                        ]
                    },
                    "Injection_and_Labeling": {
                        "type": "array",
                        "title": "Injection and Labeling",
                        "items": {
                            "type": "object",
                            "title": "Injection",
                            "properties": {
                                "Injection_Info": {
                                    "type": "object",
                                    "title": "Injection Information:",
                                    "properties": {
                                        "Tracer": {
                                            "type": "string",
                                            "title": "Tracer:",
                                            "enum": ["Click to select", "BDA", "HRP", "WGA", "AVV"],
                                            "default": "Click to select"
                                        },
                                        "TT_Direction": {
                                            "type": "string",
                                            "title": "Tracing Direction:",
                                            "enum": ["Click to select", "Anterograde", "Retrograde"],
                                            "default": "Click to select"
                                        },
                                        "InjectionSite_Name_by_Author": {
                                            "type": "string",
                                            "title": "InjectionSite Name by Author:",
                                            "minLength": 1
                                        },
                                        "InjectionSite_Info_Source_Text": {
                                            "type": "string",
                                            "title": "Text of Information Source:",
                                            "minLength": 1
                                        },
                                        "InjectionSite_Info_Source_Figure": {
                                            "type": "string",
                                            "title": "Figure of Information Source:",
                                            "default": "NA",
                                            "minLength": 1
                                        },
                                        "InjectionSite_ID_by_D99": {
                                            "type": "string",
                                            "title": "Injection Site ID by D99:",
                                            "enum": ["Click to select", "Area name 1", "Area name 2"],
                                            "default": "Click to select"
                                        },
                                        "Injection_Coverage": {
                                            "type": "object",
                                            "title": "Injection Coverage:",
                                            "properties": {
                                                "Cover_Entire_Region": {
                                                    "type": "string",
                                                    "title": "Injection covered the entire region?",
                                                    "enum": ["Click to select", "NA", "Y", "N"],
                                                    "default": "Click to select"
                                                },
                                                "Cover_Adjacent_Regions": {
                                                    "type": "string",
                                                    "title": "Injection covered adjacent regions?",
                                                    "enum": ["Click to select", "NA", "Y", "N"],
                                                    "default": "Click to select"
                                                },
                                                "Extend_into_White_Matter": {
                                                    "type": "string",
                                                    "title": "Injection extended into white matter?",
                                                    "enum": ["Click to select", "NA", "Y", "N"],
                                                    "default": "Click to select"
                                                },
                                                "Comment": {
                                                    "type": "string",
                                                    "title": "Comment:"
                                                }
                                            },
                                            "required": [
                                                "Cover_Entire_Region", 
                                                "Cover_Adjacent_Regions", 
                                                "Extend_into_White_Matter", 
                                                "Comment"
                                            ]
                                        },
                                        "InjectionSite_Mapping_Confidence": {
                                            "type": "string",
                                            "title": "Mapping confidence of the injection site:",
                                            "enum": ["Click to select", "High", "Medium", "Low"],
                                            "default": "Click to select"
                                        },
                                        "Comment_on_Injection": {
                                            "type": "string",
                                            "title": "Comment on Injection" 
                                        }
                                    },
                                    "required": [
                                        "Tracer", 
                                        "TT_Direction", 
                                        "InjectionSite_Name_by_Author", 
                                        "InjectionSite_Info_Source_Text", 
                                        "InjectionSite_Info_Source_Figure", 
                                        "InjectionSite_ID_by_D99", 
                                        "Injection_Coverage", 
                                        "InjectionSite_Mapping_Confidence", 
                                        "Comment_on_Injection"
                                    ]
                                },
                                "LabeledSites": {
                                    "type": "array",
                                    "title": "List of LabeledSites:",
                                    "items": {
                                        "type": "object",
                                        "title": "LabeledSite",
                                        "properties": {
                                            "LabeledSite_Name_by_Author": {
                                                "type": "string",
                                                "title": "LabeledSite Name by Author:",
                                                "minLength": 1
                                            },
                                            "LabeledSite_Info_Source_Text": {
                                                "type": "string",
                                                "title": "Text of Information Source:",
                                                "minLength": 1
                                            },
                                            "LabeledSite_Info_Source_Figure": {
                                                "type": "string",
                                                "title": "Figure of Information Source:",
                                                "default": "NA",
                                                "minLength": 1
                                            },
                                            "LabeledSite_ID_by_D99": {
                                                "type": "string",
                                                "title": "LabeledSite ID by D99:",
                                                "enum": ["Click to select", "Area ID 1", "Area ID 2", "Area ID 3"],
                                                "default": "Click to select"
                                            },
                                            "Coverage_of_LabeledSite": {
                                                "type": "string",
                                                "title": "Coverage of LabeledSite:",
                                                "enum": ["Click to select", "NA", "All over the specified region", "Concentrated in a unnamed subarea"],
                                                "default": "Click to select"
                                            },
                                            "Qualitative_Strength_of_Labeling": {
                                                "type": "string",
                                                "title": "Strength of Labeling in Qualitative Terms:",
                                                "enum": ["Click to select", "NA", "Strong", "Medium", "Weak"],
                                                "default": "Click to select"
                                            },
                                            "FLN": {
                                                "type": "number",
                                                "title": "Fraction of Labeled Neurons (FLN):",
                                                "minimum": 0,
                                                "maximum": 1,
                                                "default": -1
                                            },
                                            "LabeledSite_Mapping_Confidence": {
                                                "type": "string",
                                                "title": "Mapping confidence of the labeled site:",
                                                "enum": ["Click to select", "High", "Medium", "Low"],
                                                "default": "Click to select"
                                            },
                                            "Comment_on_LabeledSite": {
                                                "type": "string",
                                                "title": "Comment on LabeledSite:"
                                            }
                                        },
                                        "required": [
                                            "LabeledSite_Name_by_Author", 
                                            "LabeledSite_Info_Source_Text", 
                                            "LabeledSite_Info_Source_Figure", 
                                            "LabeledSite_ID_by_D99", 
                                            "Coverage_of_LabeledSite", 
                                            "Qualitative_Strength_of_Labeling", 
                                            "FLN", 
                                            "LabeledSite_Mapping_Confidence", 
                                            "Comment_on_LabeledSite"
                                        ]
                                    }
                                }
                            },
                            "required": [
                                "Injection_Info", 
                                "LabeledSites"
                            ]
                        }
                    }
                },
                "required": [
                    "Subject_Subspecies", 
                    "Injection_and_Labeling"
                ]
            }
        },
        "Form_of_Data_in_General": {
            "type": "string",
            "title": "In which form are data provided in general:",
            "enum": [
                "Click to select", "NA", "Only Text", "Text and Figures"
            ],
            "default": "Click to select"
        },
        "Comment_on_Article": {
            "type": "string",
            "title": "Comments on This Article:"
        }
    },
    "required": [
        "Article_Info", 
        "Parcellation_Scheme", 
        "TT_Experiments", 
        "Form_of_Data_in_General", 
        "Comment_on_Article"
    ]
}