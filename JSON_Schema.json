{
    "title": "Article ID",
    "type": "object",
    "properties": {
        "Article_Info": {
            "type": "object",
            "title": "Article Information",
            "properties":{
                "DH_INDEX": {
                    "type": "integer",
                    "title": "DH_INDEX:",
                    "minimum": 0,
                    "maximum": 10979,
                    "default": -1
                },
                "DOI": {
                    "type": "string",
                    "title": "DOI:",
                    "default": "NA",
                    "minLength": 1
                },
                "PMID": {
                    "type": "string",
                    "title": "PMID:",
                    "pattern": "[0-9]{8}|NA",
                    "default": "NA"
                },
                "PMCID": {
                    "type": "string",
                    "title": "PMCID:",
                    "pattern": "PMC[0-9]{7}|NA",
                    "default": "NA"
                },
                "Title": {
                    "type": "string",
                    "title": "Article Title:",
                    "default": "NA",
                    "minLength": 1
                },
                "URL": {
                    "type": "string",
                    "title": "URL:",
                    "default": "NA",
                    "minLength": 1
                },
                "Full_Text_URL": {
                    "type": "string",
                    "title": "Full Text URL:",
                    "default": "NA",
                    "minLength": 1                    
                },
                "Journal": {
                    "type": "string",
                    "title": "Journal:",
                    "enum": [
                        "Brain Research Reviews",
                        "Brain Research Bulletin",
                        "nature reviews neuroscience",
                        "NA"
                    ],            
                    "default": "NA"                      
                },
                "Publication_Year": {
                    "type": "integer",
                    "title": "Publication Year:",
                    "minimum": 1936,
                    "maximum": 2023,
                    "default": -1
                },
                "First_Autor": {
                    "type": "string",
                    "title": "First Autor:",
                    "default": "NA",
                    "minLength": 1                
                },
                "Macaque_Species": {
                    "type": "array",
                    "title": "Macaque Species used:",
                    "uniqueItems": true,
                    "items": {
                        "type": "string",
                        "enum": [
                            "Macaque (not specified)", 
                            "Macaque mulatta", 
                            "macaque 1", 
                            "macaque 2"
                        ]
                    }
                },
                "Comment_on_Article_Info": {
                    "type": "string",
                    "title": "Comment on Article Information:",
                    "default": "NA",
                    "minLength": 1
                }
            },
            "required": ["DH_INDEX", "DOI", "PMID", "PMCID", "Title", "URL", "Full_Text_URL", "Journal", "Publication_Year", "First_Autor", "Macaque_Species", "Comment_on_Article_Info"]
        },
        "Atlas_Parcellation_Scheme_and_Nomenclature": {
            "type": "object",
            "title": "Atlas, Parcellation Scheme and Nomenclature",
            "properties":{
                "Atlas": {
                    "type": "string",
                    "title": "Atlas:",
                    "enum": [
                        "NA", 
                        "Atlas name 1", 
                        "Atlas name 2"
                    ],
                    "default": "NA"
                },
                "Cortex_Pacellation_Scheme": {
                    "type": "string",
                    "title": "Cortical Pacellation Scheme:",
                    "enum": [
                        "NA", 
                        "Cortex_Pacellation_Scheme name 1", 
                        "Cortex_Pacellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "Thalamus_Parcellation_Scheme": {
                    "type": "string",
                    "title": "Thalamic Parcellation Scheme:",
                    "enum": [
                        "NA", 
                        "Thalamus_Parcellation_Scheme name 1", 
                        "Thalamus_Parcellation_Scheme name 2"
                    ],
                    "default": "NA"
                },
                "Nomenclature": {
                    "type": "string",
                    "title": "Nomenclature:",
                    "enum": [
                        "NA",
                        "Nomenclature name 1",
                        "Nomenclature name 2"
                    ],
                    "default": "NA"
                }
            }
        },
        "Injection_and_Label": {
            "type": "object",
            "title": "Injection and Label",
            "properties": {
                "Injections": {
                    "type": "array",
                    "title": "Injections:",
                    "items": {
                        "type": "object",
                        "title": "Injection",
                        "properties": {
                            "Injection_Info": {
                                "type": "object",
                                "title": "Injection Information:",
                                "properties": {
                                    "Injection_ID": {
                                        "type": "string",
                                        "title": "Injection ID:",
                                        "minLength": 1
                                    },
                                    "TT_Substance": {
                                        "type": "string",
                                        "title": "Tracer Substance:",
                                        "enum": ["Click to select", "HRP", "WGA", "AVV"],
                                        "default": "Click to select"
                                    },
                                    "TT_Direction": {
                                        "type": "string",
                                        "title": "Tracing Direction:",
                                        "enum": ["Click to select", "anterograde", "retrograde"],
                                        "default": "Click to select"
                                    },
                                    "Injection_Area_Name_by_Author": {
                                        "type": "string",
                                        "title": "Injection Area Name by Author:",
                                        "minLength": 1
                                    },
                                    "Injection_Area_ID_by_D99": {
                                        "type": "string",
                                        "title": "Injection Area ID by D99:",
                                        "enum": ["Click to select", "Area name 1", "Area name 2"],
                                        "default": "Click to select"
                                    },
                                    "Comment_on_Injection": {
                                        "type": "string",
                                        "title": "Comment on Injection",
                                        "default": "NA",
                                        "minLength": 1
                                    }
                                }
                            },
                            "Labeled_Areas": {
                                "type": "array",
                                "title": "List of Labeled Areas:",
                                "items": {
                                    "type": "object",
                                    "title": "Labeled Area",
                                    "properties": {
                                        "Labeled_Area_Name_by_Author": {
                                            "type": "string",
                                            "title": "Labeled Area Name by Author:",
                                            "minLength": 1
                                        },
                                        "Labeled_Area_ID_by_D99": {
                                            "type": "string",
                                            "title": "Labeled Area ID by D99:",
                                            "enum": ["Click to select", "Area ID 1", "Area ID 2", "Area ID 3"],
                                            "default": "Click to select"
                                        },
                                        "FLN": {
                                            "type": "integer",
                                            "title": "Fraction of Labeled Neurons (FLN):",
                                            "minimum": 0,
                                            "default": -1
                                        },
                                        "Comment_on_Labeled_Area": {
                                            "type": "string",
                                            "title": "Comment on Labeled Area:",
                                            "default": "NA",
                                            "minLength": 1
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "Comment_on_Article": {
            "type": "string",
            "title": "Comments on Article:",
            "default": "NA",
            "minLength": 1
        }
    },
    "required": ["Article_Info", "Injection_and_Label", "Comment_on_Article"]
}