{
    "type": "object",
    "title": {
        "type": "string",
        "template": "{{DH_INDEX}}_{{DOI}}_{{PMID}}"
    },
    "properties": {
        "DH_INDEX": {
            "type": "integer",
            "minimum": 0,
            "maximum": 10979
        },
        "DOI": {
            "type": "string",
            "default": "NA"
        },
        "PMID": {
            "type": "integer"
        },
        "PMCID": {
            "type": "string",
            "default": "NA",
            "pattern": "PMC[0-9]+"
        },
        "Title": {
            "type": "string",
            "default": "NA"
        },
        "URL": {
            "type": "string",
            "default": "NA"
        },
        "Full_Text_URL": {
            "type": "string",
            "format": "url",
            "default": "NA"                      
        },
        "Journal": {
            "type": "string",
            "enum": [
                "cat",
                "dog"
            ],            
            "default": "NA"                      
        },
        "Publication_Year": {
            "type": "date",
            "format": "date",
            "default": "NA"
        },
        "First_Autor": {
            "type": "string",
            "format": "name",
            "default": "NA"                
        },
        "Macaque_Species": {
            "type": "array",
            "format": "table",
            "title": "Macaque_Species",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "enum": [
                    "Macaque mulatta"
                ],
                "default": "Macaque"      
            },
            "default": [
                {
                    "type": "string",
                    "name": "Macaque monkey"
                }
            ]
        },
        "Parcellation_Scheme_and_Nomenclature": {
            "title": "Parcellation_Scheme_and_Nomenclature",
            "type": "object",
            "properties":{
                "Atlas": {
                    "type": "string",
                    "enum": [
                        "Atlas name 1", "Atlas name 2"
                    ]
                },
                "Cortex_Pacellation_Scheme": {
                    "type": "string",
                    "enum": [
                        "Cortex_Pacellation_Scheme name 1", "Cortex_Pacellation_Scheme name 2"
                    ]
                },
                "Thalamus_Parcellation_Scheme": {
                    "type": "string",
                    "enum": [
                        "Thalamus_Parcellation_Scheme name 1", "Thalamus_Parcellation_Scheme name 2"
                    ]
                },
                "Nomenclature": {
                    "type": "string",
                    "enum": [
                        "Nomenclature name 1",
                        "Nomenclature name 2"
                    ]
                }
            }
        },
        "Injection_and_Label": {
            "type": "object",
            "properties": {
                "Injections": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "TT_Substance": {
                                "type": "string",
                                "enum": ["HRP", "WGA", "AVV"]
                            },
                            "TT_Direction": {
                                "type": "string",
                                "enum": ["anterograde", "retrograde"]
                            },
                            "Injection_Area_by_Author": {
                                "type": "string"
                            },
                            "Injection_Area_ID_by_DD99": {
                                "type": "string",
                                "enum": ["Area name 1", "Area name 2"]
                            },
                            "COMMENT_ARD_ON_INJECTION": {
                                "type": "string",
                                "pattern": "(?:A|R|D): [^:]+"
                            },
                            "Labeled_Areas": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "Labeled_Area_by_Author": {
                                            "type": "string"
                                        },
                                        "Labeled_Area_Name_by_DD99": {
                                            "type": "string",
                                            "enum": ["Area name 1", "Area name 2", "Area name 3"]
                                        },
                                        "Labeled_Area_ID_by_DD99": {
                                            "type": "string",
                                            "enum": ["Area ID 1", "Area ID 2", "Area ID 3"]
                                        },
                                        "FLN": {
                                            "type": "integer",
                                            "minimum": 0,
                                            "default": -1
                                        },
                                        "COMMENT_ARD_ON_LABELED_AREA": {
                                            "type": "string",
                                            "pattern": "(?:A|R|D): [^:]+"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "COMMENT_ON_ARTICLE": {
            "type": "string",
            "pattern": "(?:A|R|D): [^:]+"
        }
    }
}