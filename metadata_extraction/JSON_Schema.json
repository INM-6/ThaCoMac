{
    "title": "Article ID",
    "type": "object",
    "properties": {
        "Comment_on_This_Article": {
            "type": "string",
            "title": "Comment on This Article:"
        },
        "Article_Info": {
            "type": "object",
            "title": "Article Information",
            "properties":{
                "DH_INDEX": {
                    "type": "integer",
                    "title": "DH_INDEX:",
                    "minimum": 0,
                    "maximum": 10979,
                    "default": "-1"
                },
                "DOI-URL": {
                    "type": "string",
                    "title": "DOI-URL:",
                    "default": "https://doi.org/",
                    "minLength": 17
                },
                "PMID": {
                    "type": "string",
                    "title": "PMID:",
                    "pattern": "[0-9]{8}|NA",
                    "default": "To be recorded",
                    "minLength": 2
                },
                "PMCID": {
                    "type": "string",
                    "title": "PMCID:",
                    "pattern": "PMC[0-9]{7}|NA",
                    "default": "To be recorded",
                    "minLength": 2
                },
                "Article_Title": {
                    "type": "string",
                    "title": "Article Title:",
                    "default": "To be recorded",
                    "minLength": 1
                },
                "First_Author": {
                    "type": "string",
                    "title": "First Autor (FirstName_LastName):",
                    "default": "To be recorded",
                    "minLength": 1               
                },
                "Publication_Year": {
                    "type": "integer",
                    "title": "Publication Year:",
                    "minimum": 1936,
                    "maximum": 2024,
                    "default": "-1"
                },
                "Comment": {
                    "type": "string",
                    "title": "Comment on Article Information:"
                }
            },
            "required": [
                "DH_INDEX", 
                "DOI-URL", 
                "PMID", 
                "PMCID", 
                "Article_Title", 
                "First_Author", 
                "Publication_Year", 
                "Comment"
            ]
        },
        "PSR": {
            "type": "object",
            "title": "Parcellation Scheme Reference",
            "properties":{
                "Cortical_PSR": {
                    "type": "array",
                    "title": "Cortical Pacellation Scheme Reference:",
                    "items": {
                        "type": "string",
                        "title": "Reference",
                        "enum": ["To be recorded", "And so on"],
                        "default": "To be recorded"
                    }
                },
                "Source_Description_of_CPSR": {
                    "type": "string",
                    "title": "Source Description of Cortical Pacellation Scheme Reference:",
                    "default": "To be recorded",
                    "minLength": 2
                },
                "Comment_on_CPSR": {
                    "type": "string",
                    "title": "Comment on Cortical Pacellation Scheme Reference:"
                },
                "Thalamic_PSR": {
                    "type": "array",
                    "title": "Thalamic Parcellation Scheme Reference:",
                    "items": {
                        "type": "string",
                        "title": "Reference",
                        "enum": ["To be recorded", "And so on"],
                        "default": "To be recorded"
                    }
                },
                "Source_Description_of_TPSR": {
                    "type": "string",
                    "title": "Source Description of Thalamic Pacellation Scheme Reference:",
                    "default": "To be recorded",
                    "minLength": 2
                },
                "Comment_on_TPSR": {
                    "type": "string",
                    "title": "Comment on Thalamic Parcellation Scheme Reference:"
                },
                "PSR_for_Certain_Cortical_Regions": {
                    "type": "array",
                    "title": "Parcellation Scheme for Certain Cortical Regions:",
                    "items": {
                        "type": "object",
                        "title": "Case",
                        "properties": {
                            "Region_Name": {
                                "type": "string",
                                "title": "Region Name:",
                                "default": "To be recorded",
                                "minLength": 3
                            },
                            "CPSR": {
                                "type": "array",
                                "title": "Cortical Parcellation Scheme Reference:",
                                "items": {
                                    "type": "string",
                                    "title": "Reference",
                                    "enum": ["To be recorded", "And so on"],
                                    "default": "To be recorded"
                                }
                            },
                            "Source_Description": {
                                "type": "string",
                                "title": "Source Description:",
                                "default": "To be recorded",
                                "minLength": 3
                            },
                            "Comment": {
                                "type": "string",
                                "title": "Comment:"
                            }
                        },
                        "required": [
                            "Region_Name", 
                            "CPSR", 
                            "Source_Description", 
                            "Comment"
                        ]
                    }
                },
                "PSR_for_Certain_Thalamic_Regions": {
                    "type": "array",
                    "title": "Parcellation Scheme for Certain Thalamic Regions:",
                    "items": {
                        "type": "object",
                        "title": "Case",
                        "properties": {
                            "Region_Name": {
                                "type": "string",
                                "title": "Region Name:",
                                "default": "To be recorded",
                                "minLength": 3
                            },
                            "TPSR": {
                                "type": "array",
                                "title": "Thalamic Parcellation Scheme Reference:",
                                "items": {
                                    "type": "string",
                                    "title": "Reference",
                                    "enum": ["To be recorded", "And so on"],
                                    "default": "To be recorded"
                                }
                            },
                            "Source_Description": {
                                "type": "string",
                                "title": "Source Description:",
                                "default": "To be recorded",
                                "minLength": 3
                            },
                            "Comment": {
                                "type": "string",
                                "title": "Comment:"
                            }
                        },
                        "required": [
                            "Region_Name", 
                            "TPSR", 
                            "Source_Description", 
                            "Comment"
                        ]
                    }
                }
            },
            "required": [
                "Cortical_PSR", 
                "Source_Description_of_CPSR", 
                "Comment_on_CPSR", 
                "Thalamic_PSR", 
                "Source_Description_of_TPSR", 
                "Comment_on_TPSR", 
                "PSR_for_Certain_Cortical_Regions", 
                "PSR_for_Certain_Thalamic_Regions"
            ]
        },
        "Experimental_Subjects": {
            "type": "object",
            "title": "Experimental Subjects",
            "properties": {
                "Subspecies": {
                    "type": "array",
                    "title": "Subspecies:",
                    "items": {
                        "type": "string",
                        "enum": ["To be recorded", "NS", "M. mulatta", "M. fuscata", "M. nemestrina", "M. radiata", "M. arctoides", "M. fascicularis"]
                    }
                },
                "Adulthood": {
                    "type": "string",
                    "title": "Adulthood:",
                    "enum": ["To be recorded", "NS", "Only Adult", "Only juvenile", "Both"]
                },
                "Health_Condition": {
                    "type": "string",
                    "title": "Health Condition:",
                    "enum": ["To be recorded", "NS", "Only healthy subjects", "Only unhealthy subjects", "Both"]
                },
                "Hemisphere": {
                    "type": "string",
                    "title": "Hemisphere(s) used:",
                    "enum": ["To be recorded", "NS", "Only left", "Only right", "Both"]
                },
                "Source_Description": {
                    "type": "string",
                    "title": "Source Description of Experimental Subjects:",
                    "default": "To be recorded",
                    "minLength": 2
                },
                "Comment": {
                    "type": "string",
                    "title": "Comment on Experimental Subjects:"
                }
            },
            "required": [
                "Subspecies", 
                "Adulthood", 
                "Health_Condition", 
                "Hemisphere", 
                "Source_Description", 
                "Comment"
            ]
        },
        "Injection_and_Labeling": {
            "type": "array",
            "title": "Injection and Labeling",
            "items": {
                "type": "object",
                "title": "Injection",
                "properties": {
                    "Injection": {
                        "type": "object",
                        "title": "Injection Information:",
                        "properties": {
                            "Tracer": {
                                "type": "array",
                                "title": "Tracer:",
                                "items": {
                                    "type": "string",
                                    "enum": ["To be recorded", "AAV", "BDA", "Biocytin", "Bis", "CTB", "CTB-gold", "CTB-green", "CTB-red", "CVS strain", "DG", "DR", "DT", "DY", "DY . 2HCl", "DY/NY", "EB", "FB", "FE", "FG", "FR", "FR-DA", "FS", "FS-dextran", "GLM", "HRP", "LY", "LYD", "NY", "PHA-L", "PI", "RB", "RGB", "RLM", "TAA", "TB", "WGA", "WGA-HRP", "[(35)S]-Methionine", "[^3H]-Fucose", "[^3H]-Leucine", "[^3H]-Lysine", "[^3H]-Proline", "[^3H]-WGA"],
                                    "default": "To be recorded"
                                }
                            },
                            "InjectionSite_by_Author": {
                                "type": "string",
                                "title": "InjectionSite by Author:",
                                "default": "To be recorded",
                                "minLength": 1
                            },
                            "Source_Description_of_InjectionSite": {
                                "type": "string",
                                "title": "Source Description of InjectionSite:",
                                "default": "To be recorded",
                                "minLength": 2
                            },
                            "Injection_Coverage_by_Author": {
                                "type": "object",
                                "title": "Injection Coverage:",
                                "properties": {
                                    "Cover_Adjacent_Regions": {
                                        "type": "string",
                                        "title": "Injection covered adjacent regions?",
                                        "enum": ["To be recorded", "NA", "Y", "N"],
                                        "default": "To be recorded"
                                    },
                                    "Adjacent_Regions_Covered": {
                                        "type": "string",
                                        "title": "Adjacent regions covered:",
                                        "default": "To be recorded",
                                        "minLength": 3
                                    },
                                    "Source_Description": {
                                        "type": "string",
                                        "title": "Source Description of Injection Coverage:",
                                        "default": "To be recorded",
                                        "minLength": 2
                                    },
                                    "Comment": {
                                        "type": "string",
                                        "title": "Comment on Injection Coverage:"
                                    }
                                },
                                "required": [
                                    "Cover_Adjacent_Regions", 
                                    "Adjacent_Regions_Covered", 
                                    "Source_Description", 
                                    "Comment"
                                ]
                            },
                            "Comment_on_Injection": {
                                "type": "string",
                                "title": "Comment on Injection:" 
                            },
                            "InjectionSite_M132": {
                                "type": "string",
                                "title": "InjectionSite in M132 (Cortex):",
                                "enum": ["To be recorded", "NAp", "Area name 1", "Area name 2"],
                                "default": "To be recorded"
                            },
                            "InjectionSite_D99": {
                                "type": "string",
                                "title": "InjectionSite in D99 (Thalamus):",
                                "enum": ["To be recorded", "NAp", "Area name 1", "Area name 2"],
                                "default": "To be recorded"
                            },
                            "InjectionSite_Mapping_Confidence": {
                                "type": "string",
                                "title": "Mapping Confidence of InjectionSite:",
                                "enum": ["To be recorded", "High", "Medium", "Low"],
                                "default": "To be recorded"
                            }
                        },
                        "required": [
                            "Tracer", 
                            "InjectionSite_by_Author", 
                            "Source_Description_of_InjectionSite", 
                            "Injection_Coverage_by_Author", 
                            "Comment_on_Injection", 
                            "InjectionSite_M132", 
                            "InjectionSite_D99", 
                            "InjectionSite_Mapping_Confidence"
                        ]
                    },
                    "LabeledSites": {
                        "type": "array",
                        "title": "List of LabeledSites:",
                        "items": {
                            "type": "object",
                            "title": "LabeledSite",
                            "properties": {
                                "TT_Direction": {
                                    "type": "string",
                                    "title": "Tracing Direction:",
                                    "enum": ["To be recorded", "Anterograde", "Retrograde"],
                                    "default": "To be recorded"
                                },
                                "LabeledSite_by_Author": {
                                    "type": "string",
                                    "title": "LabeledSite Described by Author:",
                                    "default": "To be recorded",
                                    "minLength": 1
                                },
                                "Source_Description_of_LabeledSite": {
                                    "type": "string",
                                    "title": "Source Description of LabeledSite:",
                                    "default": "To be recorded",
                                    "minLength": 2
                                },
                                "Comment_on_LabeledSite": {
                                    "type": "string",
                                    "title": "Comment on LabeledSite:"
                                },
                                "LabeledSite_M132": {
                                    "type": "string",
                                    "title": "LabeledSite in M132 (Cortex):",
                                    "enum": ["To be recorded", "NAp", "Area ID 1", "Area ID 2", "Area ID 3"],
                                    "default": "To be recorded"
                                },
                                "LabeledSite_D99": {
                                    "type": "string",
                                    "title": "LabeledSite in D99 (Thalamus):",
                                    "enum": ["To be recorded", "NAp", "Area ID 1", "Area ID 2", "Area ID 3"],
                                    "default": "To be recorded"
                                },
                                "LabeledSite_Mapping_Confidence": {
                                    "type": "string",
                                    "title": "Mapping Confidence of LabeledSite:",
                                    "enum": ["To be recorded", "High", "Medium", "Low"],
                                    "default": "To be recorded"
                                },
                                "Connection_Strength": {
                                    "type": "object",
                                    "title": "Connection Strength:",
                                    "properties": {
                                        "Qual_CS": {
                                            "type": "string",
                                            "title": "Connection Strength in Qualitative Terms:",
                                            "enum": ["To be recorded", "NA", "Strong", "Medium", "Weak"],
                                            "default": "To be recorded"
                                        },
                                        "Source_Description_of_Qual_CS": {
                                            "type": "string",
                                            "title": "Source Description of Qualitative Connection Strength:",
                                            "default": "To be recorded",
                                            "minLength": 2
                                        },
                                        "Quan_CS": {
                                            "type": "string",
                                            "title": "Quantitative Connection Strength:",
                                            "default": "To be recorded",
                                            "minLength": 2
                                        },
                                        "Source_Description_of_Quan_CS": {
                                            "type": "string",
                                            "title": "Source Description of Quantitative Connection Strength:",
                                            "default": "To be recorded",
                                            "minLength": 2
                                        },
                                        "Comment_on_Connection_Strength": {
                                            "type": "string",
                                            "title": "Comment on Connection Strength:"
                                        }
                                    },
                                    "required": [
                                        "Qual_CS", 
                                        "Source_Description_of_Qual_CS", 
                                        "Quan_CS", 
                                        "Source_Description_of_Quan_CS", 
                                        "Comment_on_Connection_Strength"
                                    ]
                                }
                            },
                            "required": [
                                "TT_Direction", 
                                "LabeledSite_by_Author", 
                                "Source_Description_of_LabeledSite", 
                                "Comment_on_LabeledSite", 
                                "LabeledSite_M132", 
                                "LabeledSite_D99", 
                                "LabeledSite_Mapping_Confidence", 
                                "Connection_Strength"
                            ]
                        }
                    }
                },
                "required": [
                    "Injection", 
                    "LabeledSites"
                ]
            }
        },
        "Contralateral_Connection_Reported": {
            "type": "string",
            "title": "Does this article report contralateral connections?",
            "enum": [
                "To be recorded", "Y", "N"
            ],
            "default": "To be recorded"
        }
    },
    "required": [
        "Comment_on_This_Article", 
        "Article_Info", 
        "PSR", 
        "Experimental_Subjects", 
        "Injection_and_Labeling", 
        "Contralateral_Connection_Reported"
    ]
}